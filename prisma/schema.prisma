generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id @default(autoincrement())
  category String
  product Product[]
}

model Product {
  name        String
  id          Int     @id @default(autoincrement())
  price       Float
  codeProduct String
  description String
  imgBase64   String  @db.LongText
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
}


